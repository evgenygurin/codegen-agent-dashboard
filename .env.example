# Codegen API Configuration
CODEGEN_API_KEY=your_codegen_api_key_here
CODEGEN_BASE_URL=https://api.codegen.com
CODEGEN_REPOSITORY_ID=your_repository_id
CODEGEN_ORGANIZATION_ID=your_organization_id

# Next.js Configuration
NEXTAUTH_SECRET=your_super_secret_jwt_token_here
NEXTAUTH_URL=http://localhost:3000

# Database Configuration (Optional - for persistence)
DATABASE_URL=postgresql://user:password@localhost:5432/codegen_dashboard

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here

# Feature Flags
ENABLE_AUTONOMOUS_MODE=true
ENABLE_AUTO_DEPLOYMENT=false
ENABLE_REAL_TIME_MONITORING=true
ENABLE_SECURITY_SCANNING=true

# Performance Configuration
MAX_CONCURRENT_TASKS=10
QUEUE_CHECK_INTERVAL=30000
AUTO_SCALE_THRESHOLD=0.8

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug